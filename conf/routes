# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# An example controller showing a sample home page
GET     /                           controllers.HomeController.index

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)



# Authentification controller
POST    /api/signup                     controllers.AuthController.signup()
POST    /api/login                      controllers.AuthController.login()

GET		/api/test						controllers.AuthController.test()


GET		/api/notes						controllers.NoteController.notes
GET		/api/notes/:noteId				controllers.NoteController.note(noteId: Long)
PUT     /api/notes						controllers.NoteController.edit
POST    /api/notes                      controllers.NoteController.create
